<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>카카오맵 - 목적지명</title>
        <style>
        #map {
            width: 100%;
            height: 400px;
        }
        </style>
        
        // YOUR-JS-API-KEY는 Kakao Developer 사이트에서 발급받은 JavaScript API 키로 변경하세요
        // API 키는 내 애플리케이션 -> 앱 설정 -> 앱 키에서 확인할 수 있습니다
        // 내 애플리케이션 -> 앱 설정 -> 플랫폼 -> 웹에서 도메인 등록 후 사용해야 합니다
        <script type="text/javascript" src="https://dapi.kakao.com/v2/maps/sdk.js?appkey=YOUR-JS-API-KEY"></script>
    </head>
    <body>
        <div id="map"></div>
        <script>
        var container = document.getElementById('map');
        var options = {
            center: new kakao.maps.LatLng(경도, 위도),
            level: 3
        };

        var map = new kakao.maps.Map(container, options);
        var markerPosition = new kakao.maps.LatLng(경도, 위도);
        var marker = new kakao.maps.Marker({
            position: markerPosition,
        });
        marker.setMap(map);

        // infowindow에 표시할 내용과 위치를 설정합니다
        // '목적지명'과 '경도', '위도'는 실제 목적지에 맞게 변경하세요
        var iwContent = '<div style="padding:5px;">📍 목적지명 <br><a href="https://map.kakao.com/link/map/목적지명,경도,위도" style="color:blue" target="_blank">큰지도보기</a> <a href="https://map.kakao.com/link/to/목적지명,경도,위도" style="color:blue" target="_blank">길찾기</a></div>',
            iwPosition = new kakao.maps.LatLng(경도, 위도);

        // infowindow에 표시할 내용과 위치를 설정하고, removable 속성을 true로 설정합니다
        var infowindow = new kakao.maps.InfoWindow({
            content: iwContent,
            position: iwPosition,
            removable: true
        });

        // 지도 초기 화면에서도 infowindow를 표시합니다
        infowindow.open(map, marker);

        // infowindow를 제거해도 마커를 클릭하면 다시 표시됩니다
        kakao.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });
        
        </script>
    </body>
</html>
